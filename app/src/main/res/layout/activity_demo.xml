<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >
        <!--普通的图片设置-->
        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            app:srcCompat="@drawable/ic_access_alarms_black_24dp"
            />

        <!--普通的图片设置-->
        <ImageButton
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_alarm_off_black_24dp"
            />

        <Button
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:background="@drawable/bg_select"
            />

        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:onClick="click"
            app:srcCompat="@drawable/arrow_anim"
            />

        <ImageView
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100"
            android:onClick="click"
            app:srcCompat="@drawable/square_anim"
            />

        <ImageView
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:onClick="click"
            app:srcCompat="@drawable/searchbar_anim"
            />

        <ImageView
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_150"
            android:onClick="click"
            app:srcCompat="@drawable/path_anim"
            />
    </LinearLayout>
</ScrollView>
